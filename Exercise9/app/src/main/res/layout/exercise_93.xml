<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Exercise93"
        android:padding="5dp">
    <LinearLayout
            android:id="@+id/ImageButton_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp">
        <ImageButton
                android:id="@+id/zoom_in_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확대"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="8sp"
                android:src="@drawable/zoom_in"/>
        <ImageButton
                android:id="@+id/zoom_out_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="축소"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="8sp"
                android:src="@drawable/zoom_out"/>
        <ImageButton
                android:id="@+id/rotate_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회전"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="8sp"
                android:src="@drawable/rotate"/>
        <ImageButton
                android:id="@+id/bright_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밝기 ↑"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="8sp"
                android:src="@drawable/bright"/>
        <ImageButton
                android:id="@+id/dark_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밝기 ↓"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="8sp"
                android:src="@drawable/dark"/>
        <ImageButton
                android:id="@+id/blur_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blur"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="8sp"
                android:src="@drawable/gray"/>
        <ImageButton
                android:id="@+id/embossing_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emb"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="8sp"
                android:src="@drawable/gray"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="horizontal">
    </LinearLayout>
</LinearLayout>