<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableRow android:layout_margin="3dp">
        <EditText
                android:id="@+id/edit_1"
                android:layout_span="5"
                android:hint="첫 번재 숫자 입력"
                android:layout_weight="1"
        android:layout_margin="2dp"/>
    </TableRow>
    <TableRow android:layout_margin="3dp">
        <EditText
                android:id="@+id/edit_2"
                android:layout_span="5"
                android:hint="두 번재 숫자 입력"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
    </TableRow>
    <TableRow android:layout_margin="3dp">
        <Button
                android:id="@+id/btn_num0"
                android:text="0"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
        <Button
                android:id="@+id/btn_num1"
                android:text="1"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
        <Button
                android:id="@+id/btn_num2"
                android:text="2"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
        <Button
                android:id="@+id/btn_num3"
                android:text="3"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
        <Button
                android:id="@+id/btn_num4"
                android:text="4"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
    </TableRow>
    <TableRow>
        <Button
                android:id="@+id/btn_num5"
                android:text="5"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
        <Button
                android:id="@+id/btn_num6"
                android:text="6"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
        <Button
                android:id="@+id/btn_num7"
                android:text="7"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
        <Button
                android:id="@+id/btn_num8"
                android:text="8"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
        <Button
                android:id="@+id/btn_num9"
                android:text="9"
                android:layout_weight="1"
                android:layout_margin="2dp"/>
    </TableRow>
    <TableRow android:layout_margin="3dp">
        <Button
                android:id="@+id/btn_add"
                android:layout_span="5"
                android:layout_weight="1"
                android:text="+"/>
    </TableRow>
    <TableRow android:layout_margin="3dp">
        <Button
                android:id="@+id/btn_sub"
                android:layout_span="5"
                android:layout_weight="1"
                android:text="-"/>
    </TableRow>
    <TableRow android:layout_margin="3dp">
        <Button
                android:id="@+id/btn_mul"
                android:layout_span="5"
                android:layout_weight="1"
                android:text="✕"/>
    </TableRow>
    <TableRow android:layout_margin="3dp">
        <Button
                android:id="@+id/btn_div"
                android:layout_span="5"
                android:layout_weight="1"
                android:text="÷"/>
    </TableRow>
    <TableRow android:layout_margin="3dp">
        <TextView
                android:id="@+id/label_result"
                android:layout_span="5"
                android:layout_weight="1"/>
    </TableRow>

</TableLayout>